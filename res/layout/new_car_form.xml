<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/grey_background"
	android:gravity="left" >

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical" >

		<TableLayout
			android:id="@+id/tableLayout1"
			android:layout_width="match_parent"
			android:layout_height="match_parent" >

			<TableRow
				android:id="@+id/tableRow1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" >

				<TextView
					android:id="@+id/miles_traveled_string_label"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Car Nick Name: "
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:textColor="#36B5E4" />

				<EditText
					android:id="@+id/car_nick_name_input"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:clickable="true"
					android:ems="10"
					android:onClick="onClick"
					android:textColor="#36B5E4" >

					<requestFocus android:layout_width="match_parent" />

				</EditText>
			</TableRow>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" >

				<TextView
					android:id="@+id/textView2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text=" Year:                  "
					android:textAppearance="?android:attr/textAppearanceLarge" />

				<Button
					android:id="@+id/minus"
					style="?android:attr/buttonStyleSmall"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="0.25"
					android:text="-" />

				<EditText
					android:id="@+id/year_input"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:inputType="number"
					android:text="@string/yearInput"
					android:textColor="#36B5E4" />

				<Button
					android:id="@+id/plus"
					style="?android:attr/buttonStyleSmall"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="0.25"
					android:text="+" />

			</LinearLayout>

			<TableRow
				android:id="@+id/tableRow2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" >

				<TextView
					android:id="@+id/gallons_purchased_string_label"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Make: "
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:textColor="#36B5E4" />

				<EditText
					android:id="@+id/make_input"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:clickable="true"
					android:ems="10"
					android:onClick="onClick"
					android:textColor="#36B5E4" />
			</TableRow>

			<TableRow
				android:id="@+id/tableRow3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" >

				<TextView
					android:id="@+id/price_per_gallon_string_label"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Model: "
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:textColor="#36B5E4" />

				<EditText
					android:id="@+id/model_input"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:clickable="true"
					android:ems="10"
					android:onClick="onClick"
					android:textColor="#36B5E4" />
			</TableRow>
		</TableLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >

			<TextView
				android:id="@+id/textView1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Odometer:          "
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textColor="#36B5E4" />

			<EditText
				android:id="@+id/odometer_input"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:ems="10"
				android:inputType="numberDecimal" />

		</LinearLayout>

		<TableLayout
			android:layout_width="320dp"
			android:layout_height="match_parent" >

			<TableRow
				android:id="@+id/tableRow6"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="bottom|center|center_horizontal" >

				<Button
					android:id="@+id/save"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="14dp"
					android:layout_marginTop="20dp"
					android:text="Save New Car"
					android:textColor="#36B5E4" />

				<Button
					android:id="@+id/cancel"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="       Cancel       "
					android:textColor="#36B5E4" />
			</TableRow>

		</TableLayout>

	</LinearLayout>

</RelativeLayout>
