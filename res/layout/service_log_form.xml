<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@drawable/grey_background" >

    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" >

    	<TextView
    		android:id="@+id/textView4"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="New Service log:"
    		android:textAppearance="?android:attr/textAppearanceLarge"
    		android:textColor="#36B5E4" />
    </LinearLayout>

    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" >

        <TextView
        	android:id="@+id/textView1"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Service Shop: "
        	android:textAppearance="?android:attr/textAppearanceLarge"
        	android:textColor="#36B5E4" />

        <EditText
        	android:id="@+id/service_shop_input"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:ems="10" 
        	android:textColor="#36B5E4">

        	<requestFocus />
        </EditText>

    </LinearLayout>

    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" >

        <TextView
        	android:id="@+id/textView2"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Odometer: "
        	android:textAppearance="?android:attr/textAppearanceLarge"
        	android:textColor="#36B5E4" />

        <EditText
        	android:id="@+id/odometer_input"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:ems="10"
        	android:textColor="#36B5E4" />

    </LinearLayout>

    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" >

        <Button
        	android:id="@+id/pick_date_button"
        	style="?android:attr/buttonStyleSmall"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Pick Date"
        	android:textColor="#36B5E4" />

        <TextView
        	android:id="@+id/date_string_input"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="10-11-2012"
        	android:textAppearance="?android:attr/textAppearanceLarge"
        	android:textColor="#36B5E4" />

    </LinearLayout>

    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical" >

        <TextView
        	android:id="@+id/textView5"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Work Done:"
        	android:textAppearance="?android:attr/textAppearanceLarge"
        	android:textColor="#36B5E4" />

        <Spinner
        	android:id="@+id/work_done_spinner"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content" />

        <EditText
        	android:id="@+id/work_done_other_input"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:ems="10"
        	android:inputType="textMultiLine"
        	android:textColor="#36B5E4" />

    </LinearLayout>

    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" >

        <TextView
        	android:id="@+id/textView6"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Cost: "
        	android:textAppearance="?android:attr/textAppearanceLarge"
        	android:textColor="#36B5E4" />

        <EditText
        	android:id="@+id/cost_input"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:ems="10"
        	android:inputType="numberDecimal"
        	android:textColor="#36B5E4" />

    </LinearLayout>

    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical" >

        <TextView
        	android:id="@+id/textView7"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Comments"
        	android:textAppearance="?android:attr/textAppearanceLarge"
        	android:textColor="#36B5E4" />

        <EditText
        	android:id="@+id/comments_input_field"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:ems="10"
        	android:inputType="textMultiLine"
        	android:textColor="#36B5E4" />

    </LinearLayout>

    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal" >

        <Button
        	android:id="@+id/save_button"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Save" 
        	android:textColor="#36B5E4"/>

        <Button
        	android:id="@+id/cancel_button"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Cancel" 
        	android:textColor="#36B5E4"/>

    </LinearLayout>

</LinearLayout>